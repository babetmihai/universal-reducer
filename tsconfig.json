{
  "compilerOptions": {
    "incremental": true,            
    "target": "es2019",             
    "module": "commonjs",         
    "declaration": true,          
    "outDir": "dist",              
    "esModuleInterop": true,     
    "skipLibCheck": true,      
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}